{% extends 'base.html.twig' %}

{% block title %}Mon compte - Ma Belle Boutique
{% endblock %}

{% block content %}
	<h1>Mon compte</h1>
	Bienvenue
	{{ app.user.lastname}}
	dans votre compte personnel.
	<hr>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('admin') }}">Vous êtes administrateur, accéder au Backoffice</a>
		<br>
	{% endif %}
	<a href="{{ path('account_password') }}">Modifier mon mot de passe</a>
	<br>
	<a href="{{ path('account_address') }}">Gérer mes adresses</a>
	<br>
	<a href="{{ path('account_order') }}">Mes commandes</a>
{% endblock %}
